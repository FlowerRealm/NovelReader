{
    "name": "__MSG_appName__",
    "version": "1.1",
    "manifest_version": 3,
    "description": "__MSG_appDesc__",
    "default_locale": "en",
    "background": {
        "service_worker": "src/js/background.js"
    },
    "action": {
        "default_title": "NovelReader"
    },
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/js/reader.js"
            ],
            "run_at": "document_end"
        }
    ]
}